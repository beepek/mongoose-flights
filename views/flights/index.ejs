<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Mongoose Flights</title>
</head>


<body>
  <nav><a href="/flights">View All Flights</a><a href="/flights/new">Add Flight</a></nav>

  <h1>Flight List</h1>
  
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Arrival</th>
        <th>Flight No</th>
        <th>Departs</th>
        <th>Destination</th>
        <th>Tickets Purchased</th>
      </tr>
    </thead>
    <tbody>
      
	  <% flights.forEach(f => { %>
	   
	 
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.arrival %> </td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %> </td>
          <td><%= f.ticketsPurchased %> </td>
          <td><a id="details" href="/flights/<%= f._id %>">Show Details</a></td>
         

       
         
        </tr>

		<% }) %>
   
    </tbody>
    
  </table>
</body>
</html>
